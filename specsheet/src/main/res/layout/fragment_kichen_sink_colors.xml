                style="@style/Text.Body.1.Strong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bg_secondary" />

            <TextView
                style="@style/Text.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Button"></style>


    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:elevation">2dp</item>

        <item name="android:textAppearance">@style/Text.Link.1</item>
        <item name="android:textColor">@color/color_states_button_primary_text</item>

        <item name="tint">@color/color_states_button_primary_text</item>
        <item name="iconTint">@color/color_states_button_primary_text</item>
        <item name="iconPadding">8dp</item>

        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="backgroundTint">@color/color_states_button_primary_bg</item>
        <item name="rippleColor">@color/text_secondary</item>
    </style>

    <style name="Button.Primary.Small">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:elevation">2dp</item>

        <item name="iconPadding">8dp</item>

        <item name="android:textAppearance">@style/Text.Link.2</item>
        <item name="android:textColor">@color/color_states_button_primary_text</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>

        <item name="android:textAppearance">@style/Text.Link.1</item>
        <item name="android:textColor">@color/color_on_secondary</item>

        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/color_states_button_secondary_text</item>

        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/color_states_button_secondary_bg</item>
        <item name="rippleColor">@color/text_secondary</item>
    </style>

    <style name="Button.Secondary.Small">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>

        <item name="iconPadding">8dp</item>

        <item name="android:textAppearance">@style/Text.Link.2</item>
        <item name="android:textColor">@color/color_states_button_secondary_text</item>
    </style>



</resources>